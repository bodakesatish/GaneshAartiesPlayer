<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Orange Palette - Dark Theme (Examples - often lighter/more vibrant) -->
    <color name="orange_primary">#FF222222</color>    <!-- Orange 300 -->
    <color name="orange_primary_variant">#FFA726</color> <!-- Orange 400 -->
    <color name="orange_secondary">#FFCA28</color>  <!-- Amber 300 (example) -->

    <!-- Text/Icon Colors on Oranges - Dark Theme -->
    <color name="on_orange_primary">#FFFFFFFF</color>        <!-- Black text on lighter primary orange -->
    <color name="on_orange_secondary">#000000</color>      <!-- Black text on lighter secondary orange -->

    <!-- Standard Neutrals - Dark Theme -->
    <color name="surface_background">#FF121212</color>      <!-- Standard dark surface -->
    <color name="medium_surface">#FF222222</color>       <!-- Slightly lighter dark surface -->
    <color name="text_on">#E0E0E0</color>          <!-- Light grey for text on dark surfaces -->
    <color name="medium_text_on">#BDBDBD</color>        <!-- Medium grey for text on dark -->

    <!-- Semantic Colors for List Items (Dark Theme) -->
    <color name="list_item_playing_background">#FB8C00</color>  <!-- Vibrant Orange (e.g., Orange 400) -->
    <color name="list_item_playing_text">@color/orange_primary_variant</color>

    <color name="list_item_selected_background">#FFA726</color> <!-- Darker/Saturated Orange (e.g., Orange 600) -->
    <color name="list_item_selected_text">@color/white</color> <!-- Or white if the orange is dark enough -->

    <color name="list_item_default_background">@color/medium_surface</color> <!-- Darker than pure black -->
    <color name="list_item_default_text">@color/text_on</color>

    <!-- Ensure these are also present if not inherited from base colors.xml -->
    <color name="black">#FF000000</color>
    <color name="white">#FFFFFFFF</color>
    <color name="transparent">#00000000</color>

</resources>
