    <color name="orange_primary_variant_light">#F57C00</color> <!-- Orange 700 -->
    <color name="orange_secondary_light">#FFC107</color> <!-- Amber 500 (example, if you need a secondary) -->

    <!-- Text/Icon Colors on Oranges - Light Theme -->
