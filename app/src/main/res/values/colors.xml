    <color name="on_orange_secondary_light">#000000</color>     <!-- Black text on secondary orange (amber) -->

    <!-- Standard Neutrals (can be shared or overridden) -->
    <color name="black">#FF000000</color>
    <color name="white">#FFFFFFFF</color>
    <color name="light_gray_background">#F5F5F5</color> <!-- A light grey for general backgrounds -->
    <color name="medium_gray_text">#757575</color>    <!-- For less prominent text -->
